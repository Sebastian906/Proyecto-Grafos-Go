{
    "app": {
        "name": "Sistema de Gesti√≥n de Cuevas",
        "version": "1.0.0",
        "environment": "development",
        "debug": true
    },
    "database": {
        "data_dir": "data",
        "backup_dir": "backups",
        "max_file_size_mb": 10,
        "supported_formats": [
            "json",
            "xml",
            "txt"
        ]
